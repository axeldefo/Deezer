<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.deezer.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_album"
        android:name="com.example.deezer.ui.album.AlbumFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_album" />
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.deezer.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_title"
        android:name="com.example.deezer.ui.title.TitleFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_title" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.deezer.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>